<nav class="navbar">
  <div class="nav-brand">
    <% if (typeof botAvatar !== 'undefined' && botAvatar) { %>
      <img src="<%= botAvatar %>" alt="Bot" class="nav-avatar">
    <% } %>
    <span class="nav-title">Xtra System</span>
  </div>
  <div class="nav-links">
    <a href="/" class="nav-link">🏠 الرئيسية</a>
    <a href="/commands" class="nav-link">📋 الأوامر</a>
    <a href="/premium" class="nav-link premium-nav-link">👑 Premium</a>
    <% if (typeof user !== 'undefined' && user) { %>
      <a href="/dashboard" class="nav-link">📊 داشبورد</a>
      <% if (typeof isOwner !== 'undefined' && isOwner) { %>
        <a href="/owner" class="nav-link owner-link">⚙️ لوحة الأونر</a>
      <% } %>
      <div class="nav-user">
        <% if (user.avatar) { %>
          <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar" class="user-avatar">
        <% } %>
        <span><%= user.username %></span>
        <a href="/auth/logout" class="btn-logout">خروج</a>
      </div>
    <% } else { %>
      <a href="/auth/discord" class="btn-login"><i class="fab fa-discord"></i> تسجيل الدخول</a>
    <% } %>
  </div>
</nav>
